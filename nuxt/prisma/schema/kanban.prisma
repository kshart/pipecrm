// Модель карточки в процессе
model Card {
  uuid       String   @id @default(uuid()) @db.Uuid
  title      String
  fields     Json
  tags       String[]
  userId     String?
  columnUuid String   @db.Uuid

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  touchedAt DateTime     @updatedAt
  user      User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  column    FunnelColumn @relation(fields: [columnUuid], references: [uuid], onDelete: Cascade)
}

// Тег
model Tag {
  title            String @id
  // Колличество карточек с таким тегом
  count            Int
  textColor        String?
  bgColor          String?
  cardOutlineColor String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

// Контакт
model Contact {
  uuid     String @id @default(uuid()) @db.Uuid
  title    String
  phone    String?
  telegram String?
  viber    String?
  whatsapp String?

  email  String?
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Воронка
model Funnel {
  uuid    String         @id @default(uuid()) @db.Uuid
  title   String
  columns FunnelColumn[]
}

// Колонка у воронки
model FunnelColumn {
  uuid        String @id @default(uuid()) @db.Uuid
  funnelUuid  String @db.Uuid
  title       String
  description String?
  hideEmpty   Boolean @default(false)
  color       String?
  sort        Int
  funnel      Funnel @relation(fields: [funnelUuid], references: [uuid], onDelete: Cascade)
  dataGroups  DataGroupOnFunnelColumn[]
  Card        Card[]
}

model DataGroup {
  uuid    String  @id @default(uuid()) @db.Uuid
  title   String
  fields  Json
  columns DataGroupOnFunnelColumn[]
}

model DataGroupOnFunnelColumn {
  column        FunnelColumn @relation(fields: [columnUuid], references: [uuid])
  columnUuid    String       @db.Uuid
  dataGroup     DataGroup    @relation(fields: [dataGroupUuid], references: [uuid])
  dataGroupUuid String       @db.Uuid

  @@id([columnUuid, dataGroupUuid])
}
