// Модель карточки в процессе
model Card {
  uuid       String   @id @default(uuid()) @db.Uuid
  title      String
  fields     Json
  tags       String[]
  userId     String?
  columnUuid String   @db.Uuid

  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  touchedAt DateTime     @updatedAt
  user      User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  column    FunnelColumn @relation(fields: [columnUuid], references: [uuid], onDelete: Cascade)
}

// Тег
model Tag {
  title            String @id
  // primary теги отображаются перед остальными
  primary          Boolean
  // Колличество карточек с таким тегом
  count            Int
  textColor        String?
  bgColor          String?
  cardOutlineColor String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
}

// Контакт
model Contact {
  uuid     String @id @default(uuid()) @db.Uuid
  title    String
  phone    String?
  telegram String?
  viber    String?
  whatsapp String?

  email  String?
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// Воронка
model Funnel {
  uuid    String         @id @default(uuid()) @db.Uuid
  title   String
  columns FunnelColumn[]
}

// Колонка у воронки
model FunnelColumn {
  uuid       String @id @default(uuid()) @db.Uuid
  funnelUuid String @db.Uuid
  title      String
  color      String?
  sort       Int
  funnel     Funnel @relation(fields: [funnelUuid], references: [uuid], onDelete: Cascade)
  Card       Card[]
}
